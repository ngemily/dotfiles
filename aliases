alias g='grep -n'
alias gr='grep -rn'
alias f='find . -type f -name'

alias l='ls -lhFG'
alias ls='ls -FG'
alias lrt='ls -lrthFG'
alias lrtt='ls -lrthFG | tail'
alias la='ls -ahFG'

alias u='cd ..'
alias uu='cd ../..'
alias uuu='cd ../../..'
alias uuuu='cd ../../../..'

alias tarball='tar -cvzf'
alias untar='tar -xvzf'
alias deflate='gunzip -rf *'

alias size='du -h'

alias r+='chmod +r'
alias w+='chmod +w'
alias x+='chmod +x'

alias vvim='vim -O'
